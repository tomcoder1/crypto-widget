{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "crypto-widget",
  "version": "0.2.0",
  "identifier": "nan",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "crypto-widget",
        "width": 400,
        "height": 400,
        "resizable": true,
        "alwaysOnBottom": true,
        "decorations": false,
        "fullscreen": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/128x128.png"
    ]
  }
}
